---
export interface Props {
  text: string;
  to?: string;
  classes?: string | "";
}

import { Image } from "astro:assets";
import arrowIcon from "../assets/arrow-icon.svg";

const { text, to = "/", classes } = Astro.props;
---

<a href={to} class=`cta-button ${classes}`>
  {text}
  <img
    src={arrowIcon.src}
    alt="Arrow icon urging the user to click the button."
  />
</a>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  a {
    display: flex;
    gap: 1rem;
    max-width: fit-content;
    padding: 0.75rem 3rem;
    font-size: 1.25rem;
    font-weight: 500;
    text-align: center;
    color: white;
    background: linear-gradient(272.22deg, #e30e00 0.97%, #ff392d 100%);
    border-radius: 5rem;

    &:hover {
      filter: brightness(1.1);
    }
  }
</style>
