---
export interface Props {
  heading: string;
  description: string;
}

const { heading, description } = Astro.props;
---

<header>
  <h2>{heading}</h2>
  <p>{description}</p>
</header>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  header {
    margin-bottom: 3rem;
    text-align: center;
    margin-bottom: clamp(
      3rem,
      5vw,
      7rem
    ); // I should make var, same as $p-section
  }

  h2 {
    margin-bottom: 0.625rem;
    line-height: 1;
    font-weight: 600;
    font-size: t.$fs-section-title;
    color: t.$clr-text;
  }

  p {
    font-size: 1.25rem;
    color: t.$clr-text-muted;
  }
</style>
