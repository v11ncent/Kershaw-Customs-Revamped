<style lang="scss">
  @use "../styles/tokens/_tokens.scss" as tokens;
  $bp-images: 31.25rem;

  section#story {
    display: grid;
    row-gap: 3rem;
    margin: 4rem 0;
    padding: 0 1rem;

    @media (min-width: tokens.$bp-tablet) {
      padding: 0 3rem;
    }

    @media (min-width: tokens.$bp-desktop) {
      padding: 0 7.5rem;
      margin: 6.25rem 0;
    }
  }

  .section-container {
    border: 1px solid red;
    max-width: 100rem;
    margin: 0 auto;

    @media (min-width: tokens.$bp-desktop) {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      column-gap: 7.5rem;
    }
  }

  .image-container img {
    display: none;
  }

  .text-container {
    @media (max-width: tokens.$bp-desktop) {
      order: -1;
      margin: 0 auto;
    }
  }

  .text-container p:nth-of-type(2) {
    margin-top: 0.5rem;
  }

  .services {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-top: 1rem;

    @media (min-width: tokens.$bp-desktop) {
      margin-top: 4rem;
    }
  }

  h2 {
    margin-bottom: 1.5rem;
    font-size: 2rem;
    font-weight: 600;
    color: tokens.$clr-text;
  }

  h3 {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
    font-weight: 500;
    color: tokens.$clr-text;
  }

  p {
    font-size: 1.25rem;
    line-height: 1.5;
    color: tokens.$clr-text-muted;
    max-width: 70ch;
  }
</style>
