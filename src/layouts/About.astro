<style lang="scss">
  @use "../styles/tokens/_tokens.scss" as tokens;

  section#story {
    display: grid;
    row-gap: 3rem;
    margin: 4rem 0;
    padding: 0 1rem;

    @media (min-width: tokens.$bp-tablet) {
      padding: 0 3rem;
    }

    @media (min-width: tokens.$bp-desktop) {
      padding: 0 7.5rem;
      margin: 6.25rem 0;
    }

    @media (min-width: tokens.$bp-desktop) {
      grid-template-columns: repeat(2, 1fr);
      column-gap: 7.5rem;
    }
  }

  .image-container {
    display: grid;
    gap: 1.5rem;

    @media (min-width: tokens.$bp-tablet) {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .image-container-inner {
    position: relative;
    padding-bottom: 100%; /* Maintain a 1:1 aspect ratio */

    img {
      display: none;
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover; /* Scale the image while preserving aspect ratio */
    }
  }

  .text-container {
    margin-right: auto;

    @media (max-width: tokens.$bp-desktop) {
      order: -1;
    }
  }

  .text-container > p:nth-of-type(2) {
    margin-top: 0.5rem;
  }

  .services {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;

    @media (min-width: tokens.$bp-tablet) {
      margin-top: 4rem;
    }
  }

  h2 {
    margin-bottom: 1.25rem;
    font-size: 2rem;
    font-weight: 600;
    color: tokens.$clr-text;
  }

  h3 {
    margin-bottom: 0.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: tokens.$clr-text;

    @media (min-width: tokens.$bp-tablet) {
      font-size: 1.5rem;
    }
  }

  p {
    font-size: 1.25rem;
    line-height: 1.5;
    color: tokens.$clr-text-muted;
    max-width: 70ch;
  }
</style>
