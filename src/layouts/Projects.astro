---
import { Image } from "astro:assets";
import MaxWidthContainer from "../components/MaxWidthContainer.astro";
import SectionHeader from "../components/SectionHeader.astro";
import image from "../assets/cat.jpeg";
---

<script>
  import Swiper, { Pagination } from "swiper";
  import "swiper/css";
  import "swiper/css/pagination";

  const swiper = new Swiper(".swiper", {
    modules: [Pagination],
    slidesPerView: 1.25,
    spaceBetween: "32",
    breakpoints: {
      500: {
        slidesPerView: 1.5,
      },
      650: {
        slidesPerView: 2.5,
      },
      1000: {
        slidesPerView: 3.5,
      },
    },
  });
</script>

<section id="projects">
  <MaxWidthContainer>
    <SectionHeader
      heading="What I've made"
      description="Made-to-order pieces made with quality and passion"
    />
    <ul class="projects">
      <li class="project">
        <div class="image-container">
          <Image src={image} alt="Very cute cat :-)" />
        </div>
        <div class="content-container">
          <header>
            <h3>Project</h3>
