<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section {
    padding: t.$p-section;
    background-color: #f6f6f4;
  }

  .projects {
    display: flex;
    flex-direction: column;
    gap: clamp(3rem, 4.5vw, 6rem);
  }

  .project {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: clamp(1rem, 3vw, 4rem);
    margin: 0 auto;

    @media (min-width: 53.125rem) {
      flex-direction: row;

      &:nth-of-type(even) {
        flex-direction: row-reverse;
      }
    }

    img {
      border-radius: 1.875rem;
      width: 40rem;
      max-height: 25rem;
      object-fit: cover;
    }

    .content-container {
      margin: auto 0;

      header {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
        color: t.$clr-text;
      }

      p {
        max-width: 40rem;
      }
    }
  }

  p {
    line-height: 1.5;
    font-size: 1.25rem;
    color: t.$clr-text-muted;
  }
</style>
