---
import { Image } from "astro:assets";
import image from "../assets/cat.jpeg";
---

<section id="hero">
  <div class="text-wrapper">
    <h1>Crafting quality woodworking pieces in South Jersey</h1>
    <p>
      It is a long established fact that a reader will be distracted by the
      readable content of a page when looking at its layout.
    </p>
    <a href="/">Etsy Shop</a>
  </div>
  <div class="image-wrapper">
    <Image src={image} alt="Very cute cat :-)" />
  </div>
</section>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  .text-wrapper {
    padding: 1rem;
  }

  h1 {
    margin-bottom: 1.5rem;
    line-height: 1.25;
    font-size: 2rem;
    font-weight: 700;
    color: t.$clr-text;
  }

  p {
    margin-bottom: 1.5rem;
    line-height: 1.5;
    font-size: 1.25rem;
    color: t.$clr-text-muted;
  }

  a {
    display: block;
    padding: 0.75rem 3rem;
    font-size: 1.25rem;
    font-weight: 500;
    text-align: center;
    color: white;
    background-color: t.$clr-brand;

    @media (min-width: t.$bp-tablet) {
      max-width: fit-content;
    }
  }

  .image-wrapper {
    margin-top: 2rem;
  }

  img {
    height: 100%;
    aspect-ratio: 1;
  }
</style>
