---
import MaxWidthContainer from "../components/MaxWidthContainer.astro";
import Button from "../components/Button.astro";
---

<section id="hero">
  <MaxWidthContainer>
    <div class="text-container">
      <h1>Crafting quality woodworking pieces</h1>
      <p>
        It is a long established fact that a reader will be distracted by the
        readable content of a page when looking at its layout.
      </p>
      <Button text="Etsy Shop" />
    </div>
  </MaxWidthContainer>
</section>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section {
    display: flex;
    height: 80vh;
    padding: t.$p-section;
    background: center / cover no-repeat url("/hero-image-mobile.webp");

    @media (min-width: t.$bp-tablet) {
      background: center / cover no-repeat url("/hero-image-tablet.webp");
    }

    @media (min-width: t.$bp-desktop) {
      min-height: 50rem;
      background: center / cover no-repeat url("/hero-image-desktop.webp");
    }

    :global(.max-width) {
      display: flex;
      margin: auto;
      width: 100%;
    }
  }

  h1 {
    margin-bottom: 1.5rem;
    font-size: 2.5rem;
    line-height: 1;
  }

  p {
    margin-bottom: 3rem;
    font-size: 1.35rem;
    line-height: 1.3;
    max-width: 50ch;
  }
</style>
