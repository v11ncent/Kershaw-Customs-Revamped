---
import MaxWidthContainer from "../components/MaxWidthContainer.astro";
import Button from "../components/Button.astro";
---

<section id="hero">
  <MaxWidthContainer>
    <div class="text-container show-animation">
      <h1>Crafting quality woodworking pieces that last</h1>
      <p>
        It is a long established fact that a reader will be distracted by the
        readable content of a page when looking at its layout.
      </p>
      <Button text="Etsy Shop" />
    </div>
  </MaxWidthContainer>
</section>

<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section {
    position: relative;
    display: flex;
    min-height: 50rem;
    padding: t.$p-section;
    background-position: center center;
    background-repeat: repeat;
    background-image: url("data:image/svg+xml;utf8,%3Csvg viewBox=%220 0 3840 2160%22 xmlns=%22http:%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cmask id=%22b%22 x=%220%22 y=%220%22 width=%223840%22 height=%222160%22%3E%3Cpath fill=%22url(%23a)%22 d=%22M0 0h3840v2160H0z%22%2F%3E%3C%2Fmask%3E%3Cg style=%22transform-origin:center center%22 stroke=%22%23ffe5e547%22 stroke-width=%223.84%22 mask=%22url(%23b)%22%3E%3Cpath fill=%22%23ffe5e511%22 d=%22M1475 0h295v295h-295z%22%2F%3E%3Cpath fill=%22none%22 d=%22M2360 0h295v295h-295zM2065 295h295v295h-295z%22%2F%3E%3Cpath fill=%22%23ffe5e52a%22 d=%22M0 590h295v295H0z%22%2F%3E%3Cpath fill=%22%23ffe5e51f%22 d=%22M885 885h295v295H885z%22%2F%3E%3Cpath fill=%22none%22 d=%22M0 1180h295v295H0zM3245 1180h295v295h-295zM1475 1770h295v295h-295zM2065 1770h295v295h-295zM0 2065h295v295H0zM3245 2065h295v295h-295z%22%2F%3E%3C%2Fg%3E%3Cdefs%3E%3CradialGradient id=%22a%22%3E%3Cstop offset=%220%22 stop-color=%22%23fff%22%2F%3E%3Cstop offset=%221%22 stop-color=%22%23fff%22%2F%3E%3C%2FradialGradient%3E%3C%2Fdefs%3E%3C%2Fsvg%3E");
    text-align: center;

    :global(.max-width) {
      display: flex;
      margin: auto;
      width: 100%;
    }

    :global(.cta-button) {
      margin-inline: auto;
    }
  }

  .text-container {
    margin: 0 auto;
  }

  h1 {
    margin-inline: auto;
    margin-bottom: 1.5rem;
    font-size: clamp(2.5rem, 2.75vw, 3rem);
    line-height: 1.25;
    color: t.$clr-brand;
    background: linear-gradient(272.22deg, #e30e00 0.97%, #ff392d 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  p {
    margin-inline: auto;
    max-width: 80ch;
    margin-bottom: 3rem;
    font-size: clamp(1rem, 1.25vw, 1.25rem);
    line-height: 1.5;
    color: t.$clr-text-muted;
  }
</style>
