<style lang="scss">
  @use "../styles/tokens/tokens" as t;

  section {
    margin: t.$m-section;
    padding: t.$p-section;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(calc(20rem - 2.5rem), 1fr));
    gap: 1.5rem;

    li {
      max-width: 27.5rem;
      margin: 0 auto;

      @media (min-width: t.$bp-desktop) {
        margin: 0;
      }
    }

    @media (min-width: 37.5rem) {
      grid-template-columns: repeat(auto-fit, minmax(calc(23rem), 1fr));
    }

    @media (min-width: t.$bp-desktop) {
      display: flex;
      justify-content: space-between;
    }
  }

  .testimonial {
    margin: 0 auto;
    padding: 1.5rem;
    box-shadow: 0rem 0.0625rem 0.625rem rgba(0, 0, 0, 0.1);
    border-radius: 15px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 1.5rem;

    h2 {
      margin-bottom: 0.625rem;
      line-height: 1;
      font-size: t.$fs-section-title;
      font-weight: 600;
      color: t.$clr-text;
    }

    p {
      font-size: 1.25rem;
      color: t.$clr-text-muted;
    }
  }

  .content {
    margin-bottom: 2rem;
    line-height: 1.5;
    font-size: 1.25rem;
    color: t.$clr-text-muted;
  }

  footer {
    display: flex;
    align-items: center;
    gap: 1rem;

    img {
      border-radius: 100%;
      max-height: 3.5rem;
      max-width: 3.5rem;
    }

    .meta {
      .author {
        margin-bottom: 0.125rem;
        line-height: 1;
        font-size: 1.125rem;
        font-weight: 500;
        color: t.$clr-text;
      }

      .product {
        font-size: 1rem;
        color: t.$clr-text-muted;
      }
    }
  }
</style>
